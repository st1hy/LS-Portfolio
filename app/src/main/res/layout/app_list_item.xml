<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Base.Widget.AppCompat.Button.Borderless"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/app_list_item_root"
    android:gravity="start|center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/app_list_item_image"
        android:layout_width="@dimen/app_list_item_image_size"
        android:layout_height="@dimen/app_list_item_image_size"
        tools:src="@drawable/ic_menu_camera"/>

    <TextView
        android:id="@+id/app_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        style="@style/TextAppearance.AppCompat.Body2"
        android:textIsSelectable="false"
        android:textSize="@dimen/app_list_item_text_size"
        android:gravity="center"
        tools:text="Title"/>
</LinearLayout>