<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/details_button_app_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:src="@drawable/app_store_badge" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/details_button_google_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:src="@drawable/google_play_badge" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/details_button_win_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:src="@drawable/win_store_badge" />
</LinearLayout>